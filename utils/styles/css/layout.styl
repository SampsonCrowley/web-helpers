@import 'colors'

:host
  display: block

*
  box-sizing: border-box

app-header
  z-index: 10

app-drawer
  z-index: 20

.toolbar-top
  background-color: var(--app-header-background-color, #FFFFFF)

[main-title]
  font-family: Helvetica, Arial, sans-serif
  font-size: 30px

  /* In the narrow layout, the toolbar is offset by the width of the
  drawer button, and the text looks not centered. Add a padding to
  match that button */
  padding-right: 44px

.toolbar-list
  line-height: 0
  display: none

.toolbar-list > a
  display: inline-block
  color: var(--app-header-text-color, #444444)
  text-decoration: none
  line-height: 30px
  padding: 4px 24px
  font-size: 1.2rem

.toolbar-list > a[selected]
  color: var(--app-header-selected-color, rgb(233, 30, 99))
  border-bottom: 4px solid var(--app-header-selected-color, rgb(233, 30, 99))

.menu-btn
  background: none
  border: none
  fill: var(--app-header-text-color, #444444)
  cursor: pointer
  height: 44px
  width: 44px

.drawer-list
  box-sizing: border-box
  width: 100%
  height: 100%
  padding: 24px
  background: var(--app-drawer-background-color, #444444)
  position: relative

.drawer-list > a
  display: block
  text-decoration: none
  color: var(--app-drawer-text-color, #FFFFFF)
  line-height: 40px
  padding: 0 24px

.drawer-list > a[selected]
  color: var(--app-drawer-selected-color, #78909C)

/* Workaround for IE11 displaying <main> as inline */
main
  display: block

.main-content
  padding-top: 64px
  min-height: 100vh

.page
  display: none

.page[active]
  display: block

footer
  padding: 24px
  background: var(--app-drawer-background-color, #444444)
  color: var(--app-drawer-text-color, #FFFFFF)
  text-align: center

@media (max-width: 400px)
  [main-title]
    font-size: 20px

@media (max-width: 300px)
  [main-title]
    font-size: 14px

/* Wide layout: when the viewport width is bigger than 460px, layout
changes to a wide layout */
@media (min-width: 768px) and (min-height: 640px)
  .toolbar-list
    display: block

  .menu-btn
    display: none

  .main-content
    padding-top: 107px

  /* The drawer button isn't shown in the wide layout, so we don't
  need to offset the title */
  [main-title]
    padding-right: 0px
    border-bottom: 1px solid semi-white
    border-image: linear-gradient(100deg, white 0%, var(--app-primary-color-transparent) 50%, white 100%) 1 0
