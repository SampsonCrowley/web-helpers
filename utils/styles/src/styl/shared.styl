@import 'colors'

:root
*
*:after
*:before
  box-sizing: border-box

:root
:host
  --app-drawer-width: 256px

  --app-primary-color: google-pink
  --app-primary-color-transparent: alpha(google-pink, 0.25)
  --app-secondary-color: charcoal
  --app-dark-text-color: var(--app-secondary-color)
  --app-light-text-color: white
  --app-section-even-color: semi-white
  --app-section-odd-color: white

  --app-header-background-color: white
  --app-header-text-color: var(--app-dark-text-color, charcoal)
  --app-header-selected-color: var(--app-primary-color, rgb(233, 30, 99))

  --app-drawer-background-color: var(--app-secondary-color, charcoal)
  --app-drawer-text-color: var(--app-light-text-color, white)
  --app-drawer-selected-color: var(--app-primary-color, google-pink)

  --clickableCursor: url("data:image/png;base64,") 4 7, pointer;

  --externalCursor: url("data:image/png;base64,") 4 7, pointer;

  --copyableCursor: url("data:image/png;base64,") 0 0, pointer;

a
.anchor-button
.button
.clickable
.pointer
  &[disabled]
  &.disabled
    pointer-events: none;
    cursor: default;
    &.button
      opacity: .65

  &:not([disabled])
    &, *
      cursor: var(--clickableCursor)

    &[target], &[target] *
      cursor: var(--externalCursor)
.primary
  color: #007BFF

a
.anchor-button
  color: #007BFF
  text-decoration: none
  background: none
  padding: 0
  font: inherit
  border: none
  &:hover
    text-decoration: underline
    color: blue
  .hover-success &:hover
    color: green
  .hover-primary &:hover
    color: navy
  .hover-inverse &:hover
    color: white

.copy-clip
.copyable
  &:not([disabled])
  &:not([disabled]):not([disabled])
    cursor: var(--copyableCursor)
img
  max-width: 100%;
.text-center
  text-align: center
.rounded
  border-radius: .25em
