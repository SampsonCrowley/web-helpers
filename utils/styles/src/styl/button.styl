@import 'colors'

.button
input[type='button']
input[type='reset']
input[type='submit']
  background-color: blue
  border: 0.1rem solid blue
  border-radius: .4rem
  color: #fff
  cursor: pointer
  display: inline-block
  font-size: 1em
  font-weight: 700
  letter-spacing: .1rem
  line-height: 3.8rem
  padding: 0 3.0rem
  text-align: center
  text-decoration: none
  text-transform: uppercase
  white-space: nowrap
  margin-bottom: 1em
  transition:
    color .15s ease-in-out,
    background-color .15s ease-in-out,
    border-color .15s ease-in-out,
    box-shadow .15s ease-in-out

  &:focus
  &:hover
    background-color: navy
    border-color: navy
    color: #fff
    outline: 0

  &[disabled]
    background-color: grey
    border-color: grey-mid
    cursor: default
    opacity: .5

    &:focus
    &:hover
      background-color: grey
      border-color: grey-mid

  &.outline
    background-color: transparent
    color: blue

    &:focus
    &:hover
      background-color: transparent
      border-color: grey-mid
      color: grey-mid
    &[disabled]
      &:focus
      &:hover
        border-color: inherit
        color: blue

  &.success
    background-color: green-primary
    border-color: green-primary
    color: white

    &:focus
    &:hover
      background-color: green-mid
      border-color: dark

  &.button-clear
    background-color: transparent
    border-color: transparent
    color: blue

    &:focus
    &:hover
      background-color: transparent
      border-color: transparent
      color: grey-mid

      &[disabled]:focus
      &[disabled]:hover
        color: blue

button
  &.icon-button
    font-size: inherit;
    vertical-align: middle;
    background: transparent;
    border: none;
    cursor: pointer;

  &.icon-button:hover svg
    fill: var(--app-primary-color, google-pink);
